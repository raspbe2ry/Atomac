@model Atomac.Models.Game

@{
    ViewBag.Title = "Atomac - Nova Igra";
}

<h2>Nova igra</h2>
    
<div class="row">
    <div class="col-md-8 form-horizontal">
        @*<div class="form-group">
            @Html.LabelFor(model => model.Points, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Points, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>*@

        <div class="form-group">
            @Html.LabelFor(model => model.Tokens, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Tokens, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Duration, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Duration, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Rules.DroppedCheck, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Rules.DroppedCheck, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Rules.DroppedCheckMate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Rules.DroppedCheckMate, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Rules.DroppedFigureOnLastLine, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Rules.DroppedFigureOnLastLine, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Rules.DroppedPawnOnFirstLine, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Rules.DroppedPawnOnFirstLine, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Rules.DroppedPawnOnLastLine, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Rules.DroppedPawnOnLastLine, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div>
            <div class="teamInfoContainer">
                <h4>Izazivaci: @Model.Team1.Name</h4>
                <h5>Clanovi:</h5>
                <ul>
                    <li>@Model.Team1.Capiten.FirstName @Model.Team1.Capiten.LastName (@Model.Team1.Capiten.NickName)</li>
                    <li>@Model.Team1.TeamMember.FirstName @Model.Team1.TeamMember.LastName (@Model.Team1.TeamMember.NickName)</li>
                </ul>
                <h5>Poeni: @Model.Team1.Points</h5>
            </div>
            <div class="teamInfoContainer">
                <h4>Izazvani: @Model.Team2.Name</h4>
                <h5>Clanovi:</h5>
                <ul>
                    <li>@Model.Team2.Capiten.FirstName @Model.Team2.Capiten.LastName (@Model.Team2.Capiten.NickName)</li>
                    <li>@Model.Team2.TeamMember.FirstName @Model.Team2.TeamMember.LastName (@Model.Team2.TeamMember.NickName)</li>
                </ul>
                <h5>Poeni: @Model.Team2.Points</h5>
            </div>
        </div>
        <!-- ovaj cet da se prepravi da bude samo za partiju -->
        <div class="container" style="float:right; background-color:aquamarine">
            <input type="text" id="message" />
            <input type="button" id="sendmessage" value="Send" />
            <input type="hidden" id="displayname" />
            <input type="hidden" id="uName" value=@ViewBag.NickName />
            <ul id="discussion"></ul>
        </div>
    </div>
</div>

